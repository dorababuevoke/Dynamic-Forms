<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DynamicForms.ImageUpload">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="ButtonUpload" Text="UploadImage"/>
            <Image x:Name="UploadedImage" HorizontalOptions="StartAndExpand" HeightRequest="250" WidthRequest="250" VerticalOptions="StartAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>